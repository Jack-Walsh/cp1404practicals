BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.calculate_kms()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.increment_miles(1)
            Button:
                text: 'Down'
                on_press: app.increment_miles(-1)
   # Button:
      #  text: 'Convert m to km'
      #  on_press: app.calculate_kms()
    Label:
        id: output_label
        color: (1, 1, 0, 1)

